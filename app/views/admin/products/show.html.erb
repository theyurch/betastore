<% if flash[:notice].present? %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<ol class="breadcrumb">
  <li><%= link_to 'Products', admin_products_path %></li>
  <li class="active"><%= @product.name %></li>
</ol>


<p><strong>Price:</strong> <%= number_to_currency @product.price %></p>

<%= link_to 'Edit', edit_admin_product_path(@product), class: 'btn btn-default' %>
<%= link_to 'Destroy', admin_product_path(@product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
